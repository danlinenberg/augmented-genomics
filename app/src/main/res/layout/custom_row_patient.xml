<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/patientID"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/mouseGrey"
        android:textSize="15sp" />

    <Button
        android:id="@+id/choosePatient"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/delete_btn"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/delete_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/buttonshape"
        android:onClick="pickPatient"
        android:text="Choose Patient"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <ImageButton
        android:scaleType="fitXY"
        android:background="@mipmap/minusline"
        android:id="@+id/delete_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:onClick="deleteRow"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/patientID"
        android:layout_toEndOf="@+id/patientID"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignBottom="@+id/patientID" />


</RelativeLayout>